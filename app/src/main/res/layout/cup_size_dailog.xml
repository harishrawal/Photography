<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">

            <com.app.winklix.photography.custom_fonts.Text_view_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paper Finish"
                android:textSize="18dp"
                android:textAlignment="center"/>

            <View
                android:layout_width="200dp"
                android:layout_height="0.5dp"
                android:background="@color/grey_black"
                android:layout_marginTop="2dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity :"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"/>


                <Button
                    android:id="@+id/product_minus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-" />

                <TextView
                    android:id="@+id/product_quantity"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:text="2"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:layout_weight="50" />

                <Button
                    android:id="@+id/product_plus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Price :"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="center_vertical"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="200 Rs"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <com.app.winklix.photography.custom_fonts.Button_Bold
                android:id="@+id/proceed_calenderr"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Proceed"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>