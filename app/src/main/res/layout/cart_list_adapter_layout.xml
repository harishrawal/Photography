    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="bottom"
        android:id="@+id/proceed_edit"
        app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:gravity="center"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">



        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="1"
            android:layout_centerVertical="true"

            android:id="@+id/linearLayout2">

            <ImageView
                android:id="@+id/confirmorder_itemimage_adapterpart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.19"
                android:gravity="center" />
        </LinearLayout>

        <!--  <TextView
              android:id="@+id/off"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFF"
              android:background="#8D2037"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:text=""
              android:textSize="10dp"
              android:layout_gravity="center_horizontal" />-->

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_clear"
            android:id="@+id/cancel"
            android:layout_gravity="right"
            android:layout_marginRight="7dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:id="@+id/frameLayout3">
        </FrameLayout>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_weight="3.33"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/linearLayout2"
            android:layout_marginStart="5dp">

            <com.app.winklix.photography.custom_fonts.Text_view_light
                android:id="@+id/productName"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="title"
                android:fontFamily="sans-serif-medium"
                android:textColor="#0E0200"
                />

            <TextView
                android:id="@+id/price"
                android:textSize="15dp"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="price"
                android:layout_marginTop="7dp"
                android:textColor="@color/cardview_dark_background"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/txt_qName1"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: "
                    android:padding="1dp"
                    android:textColor="@color/cardview_dark_background"
                    />

                <EditText
                    android:id="@+id/txt_qName"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="change"
                    android:padding="5dp"
                    android:maxLength="6"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/cardview_dark_background"
                    android:focusable="true"

                    />


                <Button
                    android:id="@+id/refresh"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/icon_refresh"

                    />
            </LinearLayout>


            <TextView
                android:visibility="gone"
                android:id="@+id/product_id"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore now!"
                android:layout_marginTop="7dp"
                android:textColor="@color/cardview_dark_background"
                />


            <TextView
                android:id="@+id/txt_sum"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:padding="1dp"
                android:textColor="@color/cardview_dark_background"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/product_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="hi"
                android:layout_marginLeft="20dp"
                android:textColor="#000" />

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="hi"
                android:layout_marginLeft="10dp"
                android:textColor="#000" />
        </LinearLayout>

    </RelativeLayout>
    </android.support.v7.widget.CardView>

