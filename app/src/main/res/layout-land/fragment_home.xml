<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Category_Activity">

    <android.support.v7.widget.CardView
        android:id="@+id/print_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        android:layout_margin="3dp"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/back_animation"
        >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:padding="10dp"
        android:src="@drawable/print_img_icons" />
    <com.app.winklix.photography.custom_fonts.Text_view_Bold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Print"
        android:textAlignment="center"
        android:textSize="20dp"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/calender_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        android:layout_margin="3dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/back_animation"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:padding="10dp"
                android:src="@drawable/calender_icons" />
            <com.app.winklix.photography.custom_fonts.Text_view_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calender"
                android:textAlignment="center"
                android:textSize="20dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cup_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        android:layout_margin="3dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/back_animation"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:padding="10dp"
                android:src="@drawable/cup_print_min" />
            <com.app.winklix.photography.custom_fonts.Text_view_Bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cup"
                android:textAlignment="center"
                android:textSize="20dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

